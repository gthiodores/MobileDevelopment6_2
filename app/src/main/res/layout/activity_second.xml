<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySecond">

    <TextView
        android:id="@+id/text_kenal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin= "16dp"
        android:text="Ini adalah halaman activity kedua"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin= "16dp"
        tools:text="Contoh hasil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_kenal"/>

    <TextView
        android:id="@+id/text_data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin= "16dp"
        tools:text="Contoh hasil 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_data1"/>

</android.support.constraint.ConstraintLayout>